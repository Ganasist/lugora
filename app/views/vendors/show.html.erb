<div class="row">
	<div class="columns large-12">
		<h2 class="text-center"><%= @vendor.fullname %></h2>
		<% if user_signed_in? %>
			<h3 class="text-center">
				<%= link_to 'Verify', new_vendor_transaction_path(@vendor), class: 'button success radius' %>
			</h3>
		<% end %>
			
		<div class="columns large-5">
			<%= render 'vendor_vcard' %>
			<hr>
		</div>

		<% if current_vendor == @vendor %>
			<div class="columns large-6">
					<%= render 'transaction_search' %>			
					<% unless @transactions.count == 0 %>			
						<%= render 'transaction_history' %>
					<% else %>
						<h2 class="text-center">No verifications found</h2>
					<% end %>
			</div>
		<% end %>
	</div>
</div>