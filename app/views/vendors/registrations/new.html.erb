<div class="authform registration">
	<%= simple_form_for(resource, as: resource, 
															 url: vendor_registration_path(resource)) do |f| %>
	  <h3 class="text-center">Vendor Sign Up</h3>
	  <%= f.error_notification %>
	  <div class="form-inputs">
	    <%= f.input :email, required: true, 
	    									 autofocus: true, 
	    									input_html: { :'data-tooltip' => '', 
	    																		class: 'has-tip radius', 
	    																		title: 'Required' } %>
	    <%= f.input :password, required: true %>
	    <%= f.input :password_confirmation, required: true %>
	  </div>
	  <div class="form-actions">
	    <%= f.button :submit, 'Vendor Sign Up', class: 'success expand' %>
			<%= render 'vendors/shared/links' %>
	  </div>
	<% end %>
</div>