<br>
<h3 class="text-center welcome vendor">Your Place. Our Place.</h3>
<div class="authform">
  <%= simple_form_for(:vendor, as: :vendor, 
                               url: vendor_session_path(resource), 
                              html: { role: 'form' }) do |f| %>
    <h3 class="text-center"><%= fa_icon 'shopping-cart' %> Vendor Log in</h3>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%- if devise_mapping.registerable? %>
        <%= link_to 'Sign Up', new_registration_path(resource_name), class: 'right'  %>
      <% end -%>
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, class: 'form-control radius' %>
    </div>
    <div class="form-group">
      <%- if devise_mapping.recoverable? %>
        <%= link_to 'Forgot password?', new_password_path(resource_name), class: 'right' %>
      <% end -%>
      <%= f.label :password %>
      <%= f.password_field :password, class: 'form-control radius' %>
    </div>
      <%= f.submit 'Log in', class: 'button expand success radius' %>
      <% if devise_mapping.rememberable? -%>
        <div class="checkbox">
          <%= f.check_box :remember_me %> <%= f.label :remember_me %>
        </div>
      <% end -%>
      <%= link_to 'User Log in', root_path %>
  <% end %>
</div>

<%= render '/layouts/splash_bottom' %>