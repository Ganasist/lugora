<nav class="top-bar" data-topbar>
  <ul class="title-area">
    <li class="name">
	    <% if user_signed_in? %>
	    	<%= link_to current_user do %>
          WuDii <%= fa_icon 'circle-o-notch' %> - <%= current_user.first_name %>
        <% end %>
	    <% elsif vendor_signed_in? %>
	    	<%= link_to current_vendor do %>
          WuDii <%= fa_icon 'circle-o-notch' %> - <%= current_vendor.business %>
        <% end %>
      <% elsif current_admin_user %>
        <%= link_to current_vendor do %>
          WuDii <%= fa_icon 'circle-o-notch' %> - <%= current_admin_user.first_name %>
        <% end %>
      <% else %>
        <%= link_to root_path do %>
          WuDii <%= fa_icon 'circle-o-notch' %>
        <% end %>
	    <% end %>
     </li>
    <li class="toggle-topbar menu-icon"><a href="#"><span></span></a></li>
  </ul>

  <div class="top-bar-section right">
    <ul>
      <%= render 'layouts/navigation_links' %>
      <li class="has-form text-center">
        <div class="row collapse">
          <%= simple_form_for :vendors, url: vendors_path, method: 'get' do %>
            <div class="large-12 small-12 columns">
              <%= text_field_tag :vendor_search, params[:vendor_search], placeholder: 'Search Vendors' %>
            </div>        
          <% end %>
        </div>
      </li>     
    </ul>
  </div>
</nav>